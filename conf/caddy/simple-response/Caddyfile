*.{$DOMAIN_NAME}:443 {
	tls {
		dns cloudflare {$CLOUDFLARE_API_TOKEN}
		resolvers 1.1.1.1
	}

	@app {
		host {$APP_SUBDOMAIN}.{$DOMAIN_NAME}
	}

	@api {
		host {$API_SUBDOMAIN}.{$DOMAIN_NAME}
	}

	handle @app {
		respond @app "hi from {$APP_SUBDOMAIN}.{$DOMAIN_NAME}"
	}

	handle @api {
		respond @api "hi from {$APP_SUBDOMAIN}.{$DOMAIN_NAME}"
	}
}
