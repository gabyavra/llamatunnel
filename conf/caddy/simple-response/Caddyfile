*.{$DOMAIN_NAME}:443 {
	tls {
		dns cloudflare {$CLOUDFLARE_API_TOKEN}
		resolvers 1.1.1.1
	}

	@chat {
		host chat.{$DOMAIN_NAME}
	}

	@ollama {
		host ollama.{$DOMAIN_NAME}
	}

	handle @chat {
		respond @chat "hi from chat.{$DOMAIN_NAME}"
	}

	handle @ollama {
		respond @ollama "hi from ollama.{$DOMAIN_NAME}"
	}
}
